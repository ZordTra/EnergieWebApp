@model IEnumerable<EnergieWebApp.Models.Household>

@{
    ViewData["Title"] = "Index";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<img class="banner" src="~/resources/banner.png" />

<p class="myUsageButton">
    <a asp-action="Create" class="textbutton">Huishouden toeoegen</a>
    <a href="Devices" class="textbutton"> Apparaat toevoegen</a>
</p>

<body>
    <div>
        @foreach (var device in Model)
        {
            <a asp-action ="Details" asp-route-id="@device.Id" class="rectangle">
                Huishouden: 
                @Html.DisplayFor(modelItem => device.Name)
            </a>
            

        }
    </div>

</body>

