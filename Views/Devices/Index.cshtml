@model IEnumerable<EnergieWebApp.Models.Device>

@{
    ViewData["Title"] = "Index";
}
<head> 
    <h1>Apparaten</h1>

</head>

<div>
    <a asp-action="Create" id="buttonheight" class="textbutton">Nieuwe maken </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="data">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="data">
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th class="data">
                @Html.DisplayNameFor(model => model.Mode)
            </th>
            <th class="data">
                @Html.DisplayNameFor(model => model.Kwh)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td class="data">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td class="data">
                @Html.DisplayFor(modelItem => item.Type.Id)
            </td>
                <td class="data">
                @Html.DisplayFor(modelItem => item.Mode)
            </td>
                <td class="data">
                @Html.DisplayFor(modelItem => item.Kwh)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
