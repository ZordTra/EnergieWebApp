@model EnergieWebApp.Models.Device

@{
    ViewData["Title"] = "Create";
}

<h1>Toevoegen</h1>

<h4>Device</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Naam</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeDeviceId" class="control-label">Soort</label>
                <select asp-for="TypeDeviceId" class ="form-control" asp-items="ViewBag.Types"></select>
            </div>
            <div class="form-group">
                <label asp-for="Mode" class="control-label"></label>
                <input asp-for="Mode" class="form-control" />
                <span asp-validation-for="Mode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kwh" class="control-label"></label>
                <input asp-for="Kwh" class="form-control" />
                <span asp-validation-for="Kwh" class="text-danger"></span>

            </div>
            <div class="form-group">
                <a>Huishoud nummer</a>
                <input asp-for="HouseholdId" class="form-control" />
                <span asp-validation-for="HouseholdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Terug</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
